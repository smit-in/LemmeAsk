<!DOCTYPE html>
<html>
<head>

    <!-- Charset, viewport, favicon, global fonts, global stylesheets-->

    <%- include ('partials/head.ejs') %>

    <!-- Custom -->

    <!-- <meta http-equiv="refresh" content="5"> -->

    <title> Ask Question | LemmeAsk</title>

    <link
    rel="stylesheet"
    href="/css/ask-a-question.css"
    >

</head>
<body>

    <!-- Header -->
    <%- include ('partials/header.ejs') %>

    <!-- 'Ask a question' Section -->
    <div class="ask-a-question-section">
        <div class="container">
            <div class="ask-a-question-content">

                <div class="section-title">
                    <p>Ask Question</p>
                    <img src="/img/last-questions-dashed-line.svg">
                </div>

                <div class="submit-your-question">
                    <form id="submit-form" action="/toask/savequest" method="POST">
                        <input class="submit-your-question-input-question-title" type="text" name="title" id="questionTitle" placeholder="Title (min. 20 and max. 45 characters)" minlength="20" maxlength="45" required>
                        <textarea class="submit-your-question-textarea" name="description" id="questionDescription" placeholder="Description" minlength="40" maxlength="480" required ></textarea>
                        <div class="box-description">
                            <p>Your description must contain a minimum of 40 and a maximum of 480 characters.</p>
                            <button id="submitBtn" type="submit">Ask Question</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include ('partials/footer.ejs') %>
</body>
<script src="reload/reload.js"></script>
<script src="/js/ask-a-question.js"></script>
</html>